page{
  width: 100%;
  height: 100%;
  background-image: url('https://png.pngtree.com/element_origin_min_pic/17/07/23/f165b3316f3924ee2df3106cd607c572.jpg');
  background-size: 100% 100%;
}
#userphoto{
  display: flex;
  justify-content: center;
  width: 120px;
  height: 120px;
  border: 3px solid #6AB3D5;
  border-radius: 50%;
  margin-top: 10%;
}
#userp{
  display: flex;
  justify-content: center;
}
.username{
  display: flex;
  justify-content: center;
  margin-top: 2%;
  font-weight: 900;
  font-family: Georgia, 'Times New Roman', Times, serif;
  color: white;
  font-size: 22px;
}
.userphoto{
  display: flex;
  justify-content: center;
  margin-top: 2%;
  font-weight: 600;
  font-family: Georgia, 'Times New Roman', Times, serif;
  color: white;
  font-size: 22px;
}
.mbk{
  padding: 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  border-radius: 10px;
  background-color: rgba(247,247, 247, 0.1);
}
.icon{
  width: 60px;
  height: 60px;
}
.text{
  display: flex;
  margin-top: 30px;
  justify-content: center;
  font-family: 'Times New Roman', Times, serif;
  font-size: 22px;
  color: white;
}
.both{
  display: flex;
  justify-content: space-around;
  margin-top: 25px;
}