/* pages/userinfo/userinfo.wxss */
#userphoto{
  display: flex;
  justify-content: center;
  width: 110px;
  height: 110px;
  border: 3px solid #6AB3D5;
  border-radius: 50%;
  margin-top: 8%;
}
#userp{
  display: flex;
  justify-content: center;
}
.username{
  display: flex;
  justify-content: center;
  margin-top: 2%;
  font-weight: 500;
  font-family: Georgia, 'Times New Roman', Times, serif;
  color: #A6E2FF;
  font-size: 20px;
}
#pn{
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-top: 5px;
}
#edit{
  width: 20px;
  height: 20px; 
  margin-left: 5px;
}
.line{
  width: 100%;
  height: 2px;
  background-color: #A6E2FF;
}
.item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 6px 20px;
}